<!DOCTYPE html>
<html>
  <head>
    <title>Votes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="devise-body">
    <%= render 'layouts/header' %>

    <main class="cd-main-content">
      <%= yield %>
    </main>

    <%= render 'layouts/overlay' %>

    <% if flash[:alert] || flash[:notice] %>
      <script>
        $(document).ready(function(){
          <% if flash[:alert] %>
            M.toast({ html: '<%= flash[:alert] %>' });
          <% end %>

          <% if flash[:notice] %>
            M.toast({ html: '<%= flash[:notice] %>' });
          <% end %>
        });
      </script>
    <% end %>
  </body>
</html>
